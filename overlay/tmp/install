#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add Redis user.
#======================================================================================================================

bf-adduser redis


#======================================================================================================================
# Get Redis Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat REDIS_BUILD)
bf-echo "Redis version ${VERSION}."


#======================================================================================================================
# Install Redis and dependencies.
#======================================================================================================================

bf-echo "Installing Redis v${VERSION}..."
apk add --no-cache \
    redis=${VERSION}
bf-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================
